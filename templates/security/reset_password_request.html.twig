{% extends 'base.html.twig' %}

{% block title %}- Réinitialisation du mdp{% endblock %}

{% block body %}
<div class="bgPage" style='background-image: url({{ asset ('assets/img/bgResetMdp.jpg' ) | imagine_filter('welcome') }})' > 
	<div class="container mt-5 text-center ">
    <h2 class='text-style text-warning'>Réinitialisation de votre mot de passe</h2>
		<div class="row w-75 mx-auto ">
            <div class="col text-center ">
            {{form_start (requestPassForm)}}
            <div class="text-white  fs-5 fw-bold  mt-5 ">{{form_row (requestPassForm.email)}}</div>
            <button type="submit" class="btn btn-warning   my-2" >Envoyer</button>
            {{form_end (requestPassForm)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}

       
