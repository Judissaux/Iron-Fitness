{% extends 'base.html.twig' %}

{% block title %} - Se connecter{% endblock %}

{% block body %}
<div class="bgPage" style='background-image: url({{ asset ('assets/img/bgProfil.jpg' ) | imagine_filter('welcome') }})' > 
<form method="post" >
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {% include "_partials/_flash.html.twig" %}

    {# {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %} #}

    <h1 class="h3 mb-3 font-weight-normal text-center text-warning text-style ">Se connecter</h1>
    <div class="container w-75  text-center text-family text-dark fs-5 bg-login">
    <label for="inputEmail" class='form-label py-2'>E-mail</label>
    <input  type="email" value="{{ last_username }}"  name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    
    <label for="inputPassword" class='form-label py-2'>Mot de passe </label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

    <button class="btn  btn-warning my-2 fs-5 " type="submit">
        Se connecter
    </button>
    <div><a class='my-1 btn btn-primary btn-sm' href="{{path ('forgotten-password')}}">Mot de passe oubli√© ?</a></div>
</form>
</div>
</div>
{% endblock %}
