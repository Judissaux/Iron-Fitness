{% extends 'base.html.twig' %}

{% block title %}- Réinitialisation du mdp{% endblock %}

{% block body %}
<div class="blocpadding"></div>
	<div class="container mt-5 text-center ">
    <h2 class='text-style text-warning'>Réinitialisation de votre mot de passe</h2>
		<div class="row w-50 mx-auto ">
            <div class="col text-center ">
            {{form_start (resetPassForm)}}
            {{form_row (resetPassForm.password.first)}}
            {{form_row (resetPassForm.password.second)}}
            <button type="submit" class="btn btn-warning my-2" >Envoyer </button>
            {{form_end (resetPassForm)}}
            </div>
        </div>
    </div>
</div>
{% endblock %}

       
